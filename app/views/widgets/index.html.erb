<%= javascript_include_tag 'https://s3.amazonaws.com/dev.justbooksclc.com/sd_widget/vj-widget.js' %>
<h1>Listing widgets</h1>

<table>
  <tr>
    <th>License key</th>
    <th>User</th>
    <th>Email</th>
    <th>Name</th>
    <th>Subject</th>
    <th>Message</th>
    <th>Screenshot url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @widgets.each do |widget| %>
  <tr>
    <td><%= widget.license_key %></td>
    <td><%= widget.user_id %></td>
    <td><%= widget.email_id %></td>
    <td><%= widget.name %></td>
    <td><%= widget.subject %></td>
    <td><%= widget.message %></td>
    <td><%= link_to widget.screenshot.url, widget.screenshot.url %></td>
    <td><%= link_to 'Show', widget %></td>
    <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
    <td><%= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Widget', new_widget_path %>
